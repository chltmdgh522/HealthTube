extends base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.button 녹화 시작
        form(method="POST", enctype="multipart/form-data")
            if errorMessage
                span.errorMessage=errorMessage
                br
                br
            label(for="video").label 영상 파일
            input(type="file", accept="video/*", required, id="video", name="video").submitnotinput
            label(for="thumb").label 썸네일 파일
            input(type="file", accept="image/*", required, id="thumb", name="thumb").submitnotinput
            input(placeholder="제목", required, type="text", name="title", maxlength=80).submitnotinput
            input(placeholder="설명", required, type="text", name="description", minlength=20).submitnotinput
            input(placeholder="해시태크(,로 구분해주세요)", required, type="text", name="hashtags").submitnotinput
            input(type="submit", value="업로드🚀").submitinput
    script(src="/static/js/recorder.js") 