extends base.pug

block content
    div 
        video#preview
        button#startBtn 녹화 시작
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") 영상 파일
        input(type="file", accept="video/*", required, id="video", name="video").submitnotinput
        input(placeholder="제목",required,type="text",name="title", maxlength=20).submitnotinput
        input(placeholder="설명",required,type="text",name="description",minlength=10).submitnotinput
        input(placeholder="해시태그",required, type="text",name="hashtags").submitnotinput
        input(type="submit",value="영상 업로드🚀").submitinput
block scripts
    script(src="/static/js/recorder.js") 