extends base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="본인 이름",name="name",type="text",required)
        input(placeholder="이메일",name="email",type="email",required)
        input(placeholder="아이디",name="username",type="text",required)
        input(placeholder="비밀번호",name="password",type="password",required)
        input(placeholder="비밀번호 확인",name="password2",type="password",required)
        input(placeholder="주소",name="location",type="text",required)
        input(type="submit", value="회원가입")
    hr  
    div     
        span 이미 계정이 있으시면 아래 버튼을 누르세요!
            br
            a(href="/login") 로그인 &rarr;
